{
    "pluginAlias": "Snooz",
    "pluginType": "accessory",
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true,
                "default": "White Noise Generator",
                "description": "The name that will appear in your homebridge log."
            },
            "fan": {
                "title": "Fan",
                "type": "string",
                "placeholder": "1E:F6:94:40:CB:C2",
                "pattern": "^([a-fA-F0-9]{2}:){5}[a-fA-F0-9]{2}$",
                "required": true,
                "description": "Your Snooz mac address."
            },
            "host": {
                "title": "Host",
                "type": "string",
                "placeholder": "4098ADA356C4",
                "required": true,
                "description": "Your Snooz host."
            }
        }
    }
}
